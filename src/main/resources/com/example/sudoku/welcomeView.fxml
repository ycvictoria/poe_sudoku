<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudoku.controllers.WelcomeController">

    <center>
        <Pane prefHeight="200" prefWidth="400" style="-fx-background-color: #ADD8E6;">
            <children>
                <Label alignment="CENTER" layoutX="50" layoutY="50" prefHeight="50" prefWidth="300" style="-fx-text-fill: #1365a8;" text="Sudoku 6×6">
                    <font>
                        <Font name="Comic Sans MS Bold" size="32" />
                    </font>
                </Label>
            </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </Pane>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #ADD8E6;">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnIniciar" onAction="#handleIniciarJuego" prefHeight="50" prefWidth="140" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 15;" text="Iniciar Juego" />
                <Button fx:id="btnAyuda" onAction="#handleAyuda" prefHeight="50" prefWidth="140" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 15;" text="Cómo Jugar" />
            <VBox.margin>
               <Insets bottom="12.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
