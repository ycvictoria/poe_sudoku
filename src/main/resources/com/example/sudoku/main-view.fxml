<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.GridPane?>
<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sudoku.SudokuBoardController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="522.0" prefWidth="564.0" spacing="10.0" style="-fx-background-color: white;">
            <children>
                <!-- Título -->
                <HBox alignment="CENTER" prefHeight="67.0" prefWidth="564.0">
                    <children>
                        <Label prefHeight="79.0" prefWidth="434.0"
                               style="-fx-font-family: 'Bodoni MT'; -fx-font-size: 36px;"
                               text="Sudoku" textAlignment="CENTER" textFill="#3306e4">
                            <font>
                                <Font name="Bodoni MT" size="36.0" />
                            </font>
                        </Label>
                        <Button minWidth="44.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="44.0"
                                style="-fx-background-radius: 50%; -fx-background-color: #1a5cd8; -fx-font-size: 20px; -fx-font-weight: bold;"
                                text="?"/>
                    </children>
                </HBox>

                <!-- Contenedor dinámico para el tablero -->
                <GridPane fx:id="boardContainer" prefHeight="360.0" prefWidth="450.0">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                </GridPane>

                <!-- Botones inferiores -->
                <HBox alignment="CENTER" prefHeight="105.0" prefWidth="606.0" spacing="50.0">
                    <children>
                        <Button fx:id="validateButton"
                                mnemonicParsing="false"
                                prefHeight="41.0" prefWidth="100.0"
                                style="-fx-background-color: #001b99; -fx-font-family: 'Bodoni MT'; -fx-font-size: 16px; -fx-font-weight: bold;"
                                text="Validar" textFill="WHITE"/>
                        <Button fx:id="hintButton"
                                mnemonicParsing="false"
                                prefHeight="45.0" prefWidth="100.0"
                                style="-fx-background-color: #1a5cd8; -fx-font-family: 'Bodoni MT'; -fx-font-size: 16px; -fx-font-weight: bold;"
                                text="Pista" textFill="WHITE"/>
                        <Button fx:id="restartButton"
                                mnemonicParsing="false"
                                prefHeight="45.0" prefWidth="100.0"
                                style="-fx-background-color: #1a5cd8; -fx-font-family: 'Bodoni MT'; -fx-font-size: 16px; -fx-font-weight: bold;"
                                text="Reiniciar" textFill="WHITE"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
